<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_emergency"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="robertfera.mad.bu.edu.bumad_2016_robertfera.Emergency">

    <robertfera.mad.bu.edu.bumad_2016_robertfera.NavBar
        android:id="@+id/navBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:viewName="Emergency" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navBar"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                custom:srcCompat="@drawable/icon_call"
                android:id="@+id/imageButton4"
                android:onClick="callBUDP"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="Call BUPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="center_horizontal"
                android:layout_marginTop="5sp"
                android:textSize="20sp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="150dp"
                custom:srcCompat="@drawable/icon_text"
                android:id="@+id/imageButton5"
                android:onClick="textBUDP"
                android:background="#FFFFFF"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter" />

            <TextView
                android:text="Text BUPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:gravity="center_horizontal"
                android:layout_marginTop="5sp"
                android:textSize="20sp" />

            <Button
                android:text="Call Student Health Services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:onClick="callHealth"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:gravity="center_vertical" />

            <Button
                android:text="Call Sexual Assault Response and Prevention Center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:onClick="callSARPC"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:gravity="center_vertical" />

            <Button
                android:text="Call Scarlet Safewalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:onClick="callSafewalk"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:gravity="center_vertical" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>