<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_calendar_event_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="robertfera.mad.bu.edu.bumad_2016_robertfera.CalendarEventDetail">

    <robertfera.mad.bu.edu.bumad_2016_robertfera.NavBar
        android:id="@+id/navBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:viewName="Calendar Event" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/navBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/dateTime"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:layout_marginTop="5sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/description"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:textSize="20sp"
                android:layout_marginTop="5sp" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/openTo"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"
                android:layout_marginTop="5sp"
                android:textStyle="normal|italic" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="415dp"
                android:id="@+id/buttons"
                android:layout_weight="0.67"
                android:layout_marginTop="15sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
